//------------------------------------------+-----------------------------------
//! Returns Detector type

inline Int_t TACArawHit::Type() const
{
  return fType;
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline Int_t TACArawHit::ChID() const
{
  return fChannelID;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline Double_t TACArawHit::Time() const
{
  return fTime;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline Double_t TACArawHit::Charge() const
{
  return fCharge;
}

//------------------------------------------+-----------------------------------
//! Returns Detector type

inline void TACArawHit::SetType(int typ)
{
  fType = typ;
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline void TACArawHit::SetChID(int id)
{
  fChannelID = id;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline void TACArawHit::SetTime(double time)
{
  fTime = time;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline void TACArawHit::SetCharge(double chg)
{
  fCharge = chg;
}

//##############################################################################

//------------------------------------------+-----------------------------------
//! Returns trigger time from SC

inline Double_t TACAdatRaw::TrigTime() const
{
  return fTrigTime;
}


//------------------------------------------+-----------------------------------
//! Returns time from SC

inline void TACAdatRaw::SetTrigTime(double time)
{
  fTrigTime = time;
}


//------------------------------------------+-----------------------------------
//! Access \a i 'th hit

inline TACArawHit* TACAdatRaw::GetHit(Int_t i)
{
  return (TACArawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Read-only access \a i 'th hit

inline const TACArawHit* TACAdatRaw::GetHit(Int_t i) const
{
  return (const TACArawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted TDC values.

inline Int_t TACAdatRaw::NTdc() const
{
  return fiNTdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted ADC values.

inline Int_t TACAdatRaw::NAdc() const
{
  return fiNAdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of discarded FastBus values.

inline Int_t TACAdatRaw::NDrop() const
{
  return fiNDrop;
}

