//------------------------------------------+-----------------------------------
//! Returns Detector type

inline Int_t TATWrawHit::Type() const
{
  return ir_typ;
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline Int_t TATWrawHit::ChID() const
{
  return ir_chid;
}

//------------------------------------------+-----------------------------------
//! Returns MC ID

inline Int_t TATWrawHit::IDMC() const
{
  return ir_mcid;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline Double_t TATWrawHit::Time() const
{
  return ir_time;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline Double_t TATWrawHit::Charge() const
{
  return ir_chg;
}

//------------------------------------------+-----------------------------------
//! Returns Detector type

inline void TATWrawHit::SetType(int typ)
{
  ir_typ = typ;
  return;	
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline void TATWrawHit::SetChID(int id)
{
  ir_chid = id;
  return;
}

//! Sets the MC ID

inline void TATWrawHit::SetMCID(int id)
{
  ir_mcid = id;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline void TATWrawHit::SetTime(double time)
{
  ir_time = time;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline void TATWrawHit::SetCharge(double chg)
{
  ir_chg = chg;
  return;
}

//##############################################################################

//------------------------------------------+-----------------------------------
//! Access \a i 'th hit

inline TATWrawHit* TATWdatRaw::Hit(Int_t i)
{
  return (TATWrawHit*) ((*hir)[i]);;
}

//------------------------------------------+-----------------------------------
//! Read-only access \a i 'th hit

inline const TATWrawHit* TATWdatRaw::Hit(Int_t i) const
{
  return (const TATWrawHit*) ((*hir)[i]);;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted TDC values.

inline Int_t TATWdatRaw::NTdc() const
{
  return fiNTdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted ADC values.

inline Int_t TATWdatRaw::NAdc() const
{
  return fiNAdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of discarded FastBus values.

inline Int_t TATWdatRaw::NDrop() const
{
  return fiNDrop;
}

