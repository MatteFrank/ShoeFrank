/*!
  \file
  \version $Id: TAGeventId.icc,v 1.1 2001/12/10 21:28:24 mueller Exp $
  \brief Implementation (inline) of TAGeventId
*/

//------------------------------------------+-----------------------------------
//! Default constructor.

inline TAGeventId::TAGeventId()
  : fiCam(-1),
    fiRun(-1),
    fiEvt(-1)
{}

//------------------------------------------+-----------------------------------
//! Construct with campaign, run, and event number.

inline TAGeventId::TAGeventId(Short_t i_cam, Short_t i_run, Int_t i_evt)
  : fiCam(i_cam),
    fiRun(i_run),
    fiEvt(i_evt)
{}

//------------------------------------------+-----------------------------------
//! Set campaign number.

inline void TAGeventId::SetCampaignNumber(Short_t i_cam)
{
  fiCam = i_cam;
  return;
}

//------------------------------------------+-----------------------------------
//! Set run number.

inline void TAGeventId::SetRunNumber(Short_t i_run)
{
  fiRun = i_run;
  return;
}

//------------------------------------------+-----------------------------------
//! Set event number.

inline void TAGeventId::SetEventNumber(Int_t i_evt)
{
  fiEvt = i_evt;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns campaign number.

inline Short_t TAGeventId::CampaignNumber() const
{
  return fiCam;
}

//------------------------------------------+-----------------------------------
//! Returns run number.

inline Short_t TAGeventId::RunNumber() const
{
  return fiRun;
}

//------------------------------------------+-----------------------------------
//! Returns event number.

inline Int_t TAGeventId::EventNumber() const
{
  return fiEvt;
}

//------------------------------------------+-----------------------------------
//! Clear event id.

inline void TAGeventId::Clear()
{
  fiCam = -1;
  fiRun = -1;
  fiEvt = -1;
  return;
}

//------------------------------------------+-----------------------------------
/*!
  \relates TAGeventId
  \brief Returns true of event id's \a lhs and \a rhs are equal
*/

inline bool operator==(const TAGeventId& lhs, const TAGeventId& rhs)
{
  return lhs.fiCam==rhs.fiCam && lhs.fiRun==rhs.fiRun && lhs.fiEvt==rhs.fiEvt;
}

