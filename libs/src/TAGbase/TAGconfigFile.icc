//------------------------------------------+-----------------------------------
//! Returns \a true of file is open.

inline Bool_t TAGconfigFile::IsOpen() 
{
  return fStream.is_open();
}

//------------------------------------------+-----------------------------------
//! Read next line.

inline Bool_t TAGconfigFile::NextLine(TString& line)
{
  Bool_t b_ok = NextLine();
  line = fLine;
  return b_ok;
}

//------------------------------------------+-----------------------------------
//! Read-only access to current line.

inline const TString& TAGconfigFile::CurrentLine() const
{
  return fLine;
}

