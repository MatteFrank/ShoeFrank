//------------------------------------------+-----------------------------------
//! Returns setting of the kValid status bit.

inline Bool_t TAGaction::Valid() const
{
  return TestBit(kValid);
}

//------------------------------------------+-----------------------------------
//! Returns setting of the kEof status bit.

inline Bool_t TAGaction::Eof() const
{
  return TestBit(kEof);
}

//------------------------------------------+-----------------------------------
//! Returns \c true if histograms are properly booked

inline Bool_t TAGaction::ValidHistogram() const
{
  return fbHistValid;
}

//------------------------------------------+-----------------------------------
//! Set histogram booking state

inline void TAGaction::SetValidHistogram(Bool_t b_ok)
{
  fbHistValid = b_ok;
  return;
}

//------------------------------------------+-----------------------------------
//! Set histogram booking state

inline TList* TAGaction::GetHistogrammList() const
{
  return fpHistList;
}


