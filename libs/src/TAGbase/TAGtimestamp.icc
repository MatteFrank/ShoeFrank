//------------------------------------------+-----------------------------------
//! Convert a Unix time to a timestamp.

inline void TAGtimestamp::FromUnixTime(Int_t i_time)
{
  fiSec  = i_time;
  fiUSec = 0;
  return;
}

//------------------------------------------+-----------------------------------
//! Convert timestamp to \c double .

inline Double_t TAGtimestamp::ToDouble() const
{
  return (Double_t)fiSec + 1.e-6 * (Double_t)fiUSec;
}

//------------------------------------------+-----------------------------------
//! Convert timestamp to a Unix time.

inline Int_t TAGtimestamp::ToUnixTime() const
{
  return fiSec;
}

//------------------------------------------+-----------------------------------
//! Returns \c true if time is valid.

inline Bool_t TAGtimestamp::Valid() const
{
  return fiSec >= 0;
}

//------------------------------------------+-----------------------------------
//! Invalidates timestamp

inline void TAGtimestamp::Clear()
{
  fiSec  = -1;
  fiUSec = 0;
  return;
}

