/*------------------------------------------+---------------------------------*/
//! Returns list of actions.

inline TList* TAGroot::ListOfAction() const
{
  return fpActionList;
}

/*------------------------------------------+---------------------------------*/
//! Returns list of data descriptors.

inline TList* TAGroot::ListOfDataDsc() const
{
  return fpDataDscList;
}

/*------------------------------------------+---------------------------------*/
//! Returns list of parameter descriptors.

inline TList* TAGroot::ListOfParaDsc() const
{
  return fpParaDscList;
}

/*------------------------------------------+---------------------------------*/
//! Set campaign number.

inline void TAGroot::SetCampaignNumber(Short_t i_cam)
{
  fRunInfo.SetCampaignNumber(i_cam);
  fEventId.SetCampaignNumber(i_cam);
  return;
}

/*------------------------------------------+---------------------------------*/
//! Set run number.

inline void TAGroot::SetRunNumber(Short_t i_run)
{
  fRunInfo.SetRunNumber(i_run);
  fEventId.SetRunNumber(i_run);
  return;
}

/*------------------------------------------+---------------------------------*/
//! Set event number.

inline void TAGroot::SetEventNumber(Int_t i_evt)
{
  fEventId.SetEventNumber(i_evt);
  return;
}

/*------------------------------------------+---------------------------------*/
//! Returns current campaign number.

inline Short_t TAGroot::CurrentCampaignNumber() const
{
  return fEventId.CampaignNumber();
}

/*------------------------------------------+---------------------------------*/
//! Returns current run number.

inline Short_t TAGroot::CurrentRunNumber() const
{
  return fEventId.RunNumber();
}

/*------------------------------------------+---------------------------------*/
//! Returns current event number.

inline Int_t TAGroot::CurrentEventNumber() const
{
  return fEventId.EventNumber();
}

/*------------------------------------------+---------------------------------*/
//! Read-only access current run info

inline const TAGrunInfo& TAGroot::CurrentRunInfo() const
{
  return fRunInfo;
}

/*------------------------------------------+---------------------------------*/
//! Read-only access current event id

inline const TAGeventId& TAGroot::CurrentEventId() const
{
  return fEventId;
}

