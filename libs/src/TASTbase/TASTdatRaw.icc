//------------------------------------------+-----------------------------------
//! Returns Detector type

inline Int_t TASTrawHit::Type() const
{
  return ir_typ;
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline Int_t TASTrawHit::ChID() const
{
  return ir_chid;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline Double_t TASTrawHit::Time() const
{
  return ir_time;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline Double_t TASTrawHit::Charge() const
{
  return ir_chg;
}

//------------------------------------------+-----------------------------------
//! Returns Detector type

inline void TASTrawHit::SetType(int typ)
{
  ir_typ = typ;
  return;	
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline void TASTrawHit::SetChID(int id)
{
  ir_chid = id;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline void TASTrawHit::SetTime(double time)
{
  ir_time = time;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline void TASTrawHit::SetCharge(double chg)
{
  ir_chg = chg;
  return;
}

//##############################################################################

//------------------------------------------+-----------------------------------
//! Returns trigger time from SC

inline Double_t TASTdatRaw::TrigTime() const
{
  return fdTrgTime;
}


//------------------------------------------+-----------------------------------
//! Returns time from SC

inline void TASTdatRaw::SetTrigTime(double time)
{
  fdTrgTime = time;
  return;
}


//------------------------------------------+-----------------------------------
//! Access \a i 'th hit

inline TASTrawHit* TASTdatRaw::Hit(Int_t i)
{
  return (TASTrawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Read-only access \a i 'th hit

inline const TASTrawHit* TASTdatRaw::Hit(Int_t i) const
{
  return (const TASTrawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted TDC values.

inline Int_t TASTdatRaw::NTdc() const
{
  return fiNTdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted ADC values.

inline Int_t TASTdatRaw::NAdc() const
{
  return fiNAdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of discarded FastBus values.

inline Int_t TASTdatRaw::NDrop() const
{
  return fiNDrop;
}

