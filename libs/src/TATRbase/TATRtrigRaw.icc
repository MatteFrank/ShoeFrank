//------------------------------------------+-----------------------------------
//! Returns Counts

inline Int_t TATRtrigHit::Count() const
{
  return trg_count;
}

//------------------------------------------+-----------------------------------
//! Returns Pattern

inline Int_t TATRtrigHit::Pattern() const
{
  return trg_pat;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline Double_t TATRtrigHit::TrigTime(int ch) const
{
  if(ch>=0 && ch<(int)trg_tim.size()) {
    return trg_tim.at(ch);
  } else {
    Error("Action()","TrigTime setting wrong channel :: %d %ld",ch,trg_tim.size());
    return -1000.;
  }
}
//------------------------------------------+-----------------------------------
//! Returns multiplicity time from TDC

inline Double_t TATRtrigHit::TrigMult(int ch) const
{
  if(ch>=0 && ch<(int)trg_mul.size()) {
    return trg_mul.at(ch);
  } else {
    Error("Action()","TrigMult setting wrong channel :: %d",ch);
    return -1;
  }
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline Int_t TATRtrigHit::Status() const
{
  return vu_stat;
}

//------------------------------------------+-----------------------------------
//! Returns Scaler Counts at a given channel

inline Int_t TATRtrigHit::ScaCount(int ch) const
{
  if(ch>=0 && ch<16) {
    return sca_cnt[ch];
  } else {
    Fatal("Action()","Channel outside range! %d",ch);
    return -1;
  }
}



//------------------------------------------+-----------------------------------
//! Returns Counts

inline void TATRtrigHit::SetCount(int count)
{
  trg_count =  count;
}

//------------------------------------------+-----------------------------------
//! Returns Pattern

inline void TATRtrigHit::SetPattern(int patt)
{
  trg_pat = patt;
}


//------------------------------------------+-----------------------------------
//! time from Vulom

inline Int_t TATRtrigHit::VulomTime() const
{
  return trg_vul_time;   
} 

inline void TATRtrigHit::SetVulomTime(int tim)
{
  trg_vul_time=tim;	
}


//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline void TATRtrigHit::SetTrigTime(int ch, double time)
{

  if(ch>=0 && ch<(int)trg_tim.size()) {
    trg_tim.at(ch) = time;
  } else {
    Error("Action()","Set TrigTime setting wrong channel :: %d %ld",ch,trg_tim.size());
    trg_tim.at(ch) = -10000;
  }

}
//------------------------------------------+-----------------------------------
//! Returns multiplicity time from TDC

inline void TATRtrigHit::SetTrigMult(int ch, int mult)
{
  if(ch>=0 && ch<(int)trg_mul.size()) {
    trg_mul.at(ch) = mult;
  } else {
    Error("Action()","TrigMult setting wrong channel :: %d",ch);
    trg_mul.at(ch) = -1;
  }
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline void TATRtrigHit::SetStatus(int stat)
{
  vu_stat =  stat;
}

//------------------------------------------+-----------------------------------
//! Set the counts Scaler Counts

inline void TATRtrigHit::SetScaCount(int ch, int count)
{
  if(ch>=0 && ch<16) {
    sca_cnt[ch] =  count;
  } else {
    Fatal("Action()","Trying to set a channel outside range!");
  }
}


//------------------------------------------+-----------------------------------
//! Access \a i 'th hit

inline TATRtrigHit* TATRtrigRaw::Hit(Int_t i)
{
  return (TATRtrigHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Read-only access \a i 'th hit

inline const TATRtrigHit* TATRtrigRaw::Hit(Int_t i) const
{
  return (const TATRtrigHit*) ((*fListOfHits)[i]);;
}

