//------------------------------------------+-----------------------------------
//! Returns Detector type

inline Int_t TATRrawHit::Type() const
{
  return ir_typ;
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline Int_t TATRrawHit::ChID() const
{
  return ir_chid;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline Double_t TATRrawHit::Time() const
{
  return ir_time;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline Double_t TATRrawHit::Charge() const
{
  return ir_chg;
}

//------------------------------------------+-----------------------------------
//! Returns Detector type

inline void TATRrawHit::SetType(int typ)
{
  ir_typ = typ;
  return;	
}

//------------------------------------------+-----------------------------------
//! Returns channel ID

inline void TATRrawHit::SetChID(int id)
{
  ir_chid = id;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns time from TDC

inline void TATRrawHit::SetTime(double time)
{
  ir_time = time;
  return;
}

//------------------------------------------+-----------------------------------
//! Returns charge from QDC

inline void TATRrawHit::SetCharge(double chg)
{
  ir_chg = chg;
  return;
}

//##############################################################################

//------------------------------------------+-----------------------------------
//! Returns trigger time from SC

inline Double_t TATRdatRaw::TrigTime() const
{
  return fdTrgTime;
}


//------------------------------------------+-----------------------------------
//! Returns time from SC

inline void TATRdatRaw::SetTrigTime(double time)
{
  fdTrgTime = time;
  return;
}


//------------------------------------------+-----------------------------------
//! Access \a i 'th hit

inline TATRrawHit* TATRdatRaw::Hit(Int_t i)
{
  return (TATRrawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Read-only access \a i 'th hit

inline const TATRrawHit* TATRdatRaw::Hit(Int_t i) const
{
  return (const TATRrawHit*) ((*fListOfHits)[i]);;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted TDC values.

inline Int_t TATRdatRaw::NTdc() const
{
  return fiNTdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of accepted ADC values.

inline Int_t TATRdatRaw::NAdc() const
{
  return fiNAdc;
}

//------------------------------------------+-----------------------------------
//! Returns number of discarded FastBus values.

inline Int_t TATRdatRaw::NDrop() const
{
  return fiNDrop;
}

